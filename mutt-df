{ p = 1 }

/^[[:space:]]*>/ {
	p = 0
	in_block = 1
	next
}

/^[[:space:]]*$/ {
	return_block = 1
	next
}

in_block {
	p = 1
	in_block = 0
	print "> quoted block removed by display filter"
}

return_block {
	printf "\n"
	return_block = 0
}

p

END {
	if( in_block ) {
		print "> quoted block removed by display filter"
	}
}

# vim: set ft=awk:
